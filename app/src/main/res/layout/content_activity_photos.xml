<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.surfergraphy.surf.photos.Activity_Photos"
    tools:showIn="@layout/app_bar_activity_photos">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:scrollbarSize="5dp">

        <LinearLayout
            android:id="@+id/layout_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp" />
    </HorizontalScrollView>

    <co.moonmonkeylabs.realmrecyclerview.RealmRecyclerView
        android:id="@+id/rrv_recycler_view_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rrvGridLayoutSpanCount="3"
        app:rrvIsRefreshable="false"
        app:rrvLayoutType="Grid" />
</LinearLayout>
