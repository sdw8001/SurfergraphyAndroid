<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="1dp"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_wave_count"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/cardview_light_background"
            android:gravity="end|center_vertical"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/text_view_wave"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_wave"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@color/cardview_light_background"
            android:gravity="start|center_vertical"
            android:textSize="20sp"
            android:text=" Wave"
            app:layout_constraintLeft_toRightOf="@+id/text_view_wave_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_view_wave_count" />

        <TextView
            android:id="@+id/text_view_wave_price"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:background="@color/cardview_light_background"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_wave_count" />

        <Button
            android:id="@+id/button_buy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Buy"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_menu_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_wave_price" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>